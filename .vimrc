" ===========
" = misc

set visualbell t_vb=

" show line number
set number

" ===========
" = search

" incremental search
set incsearch

" case insensitive search
" e.g.)
" /copyright      " Case insensitive
" /Copyright      " Case sensitive
" /copyright\C    " Case sensitive
" /Copyright\c    " Case insensitive
set ignorecase
set smartcase

